<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:background="@drawable/list_cell"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/list_item_booking_linearlayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.20">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_item_booking_user_imagview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/driver_icon"
            app:civ_border_width = "2dp"
            android:layout_margin="5dp"
            app:civ_border_color = "#0490db"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="2.80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_booking_user_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textColor="#0490db"
            android:text="dsdsd"
            android:textStyle="bold"
            android:textSize="18dp"
             />

        <TextView
            android:id="@+id/list_item_booking_service_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textColor="#0490db"
            android:textSize="18dp"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/list_item_booking_datetime_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:textColor="#0490db"
            android:textSize="18dp"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
</LinearLayout>
