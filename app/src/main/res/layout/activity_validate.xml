<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent_lay"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:src="@drawable/upsidecopy"/>

    <TextView
        style="@style/FontAvenirBook"
        android:id="@+id/txt_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/otpscreen_string"
        android:gravity="center"
        android:textColor="@color/phonenum_clr"
        android:layout_below="@+id/top_img"/>
        <!--&gt;-->
    <RelativeLayout
        android:id="@+id/verifyotp_lay"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_view"
        android:background="@drawable/baground"
        >
        <TextView
            style="@style/FontAvenirBook"
            android:id="@+id/phone_edt"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:hint=""
            android:textSize="12dp"
            android:textColor="@color/phonenum_clr"
            android:textColorHint="@color/phonenum_clr"
            android:layout_marginLeft="15dp"
            android:background="@null"

           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/verifyotp_layoutone"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/verifyotp_lay"
        android:background="@drawable/baground"
        >
        <EditText
            style="@style/FontAvenirBook"
            android:id="@+id/otp_edt"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:inputType="phone"
            android:textSize="12dp"
            android:imeOptions="actionDone"
            android:hint="Enter code here"
            android:layout_marginLeft="15dp"
            android:background="@null"

            />
    </RelativeLayout>
