<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.czsm.DD_driver.activities.CurrentReqActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/user_service_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:layout_gravity="center"
        android:theme="@style/AllinAllMaterialTheme.AppBarOverlay"
        android:titleTextAppearance="@color/textColorPrimary" />
    <LinearLayout
        android:id="@+id/name_lay"
        android:layout_below="@+id/user_service_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            style="@style/FontAvenirBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/view2"
            android:layout_alignTop="@+id/name_lay"
            android:text="Name:"
            android:layout_marginLeft="35dp"
            android:textSize="17dp" />
        <TextView
            android:id="@+id/name_txt"
            style="@style/FontAvenirBook"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phone_lay"
        android:layout_below="@+id/name_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            style="@style/FontAvenirBook"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:id="@+id/phone_txt"
            style="@style/FontAvenirBook"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_lay"
        android:layout_below="@+id/phone_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/FontAvenirBook"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginLeft="35dp"/>
        <TextView
            android:id="@+id/add_txt"
            style="@style/FontAvenirBook"
            android:textSize="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/map_lay"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/add_lay"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/dialog_background">
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:layout_marginTop="35dp"/>

        <ImageView
            android:id="@+id/map_locabv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/add_lay"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/bitmap" />

        <ImageView
            android:id="@+id/map_loc"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center" />
    </FrameLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/map_txt"
        style="@style/FontAvenirBook"
        android:textSize="15dp"
        android:textColor="@color/textmain_clr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map View"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="285dp"
        android:layout_below="@+id/map_lay"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/map_txt"
        android:background="@color/darkGray"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/view2" />


</RelativeLayout>
