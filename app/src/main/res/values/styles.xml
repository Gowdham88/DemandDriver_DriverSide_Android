<resources>

    <!-- Base application theme. -->

    <style name="AllinAllMaterialTheme" parent="AllinAllMaterialTheme.Base"></style>


    <style name="AllinAllMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="AllinAllMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AllinAllMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>
    <style name="checkboxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/textmain_clr</item>
        <item name="android:textColorSecondary">@color/textmain_clr</item>
    </style>
    <style name="AllinAllMaterialTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:statusBarColor">@color/status_clr</item>-->

    </style>
    <style name="FontAvenirBook">
        <item name="fontPath">fonts/Avenir-Light.ttf</item>
    </style>

    <style name="FontAvenirLight">
        <item name="fontPath">fonts/Avenir-Light.ttf</item>
    </style>
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">12dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
</resources>
